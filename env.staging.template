# Configuration Staging Template
# Copiez ce fichier vers env.staging et remplissez avec vos vraies valeurs

# Django
SECRET_KEY=your-secret-key-staging-here
DEBUG=False
ALLOWED_HOSTS=your-staging-ip,staging.inlearning.com,localhost

# Base de donn√©es PostgreSQL
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=inlearning_user
POSTGRES_PASSWORD=your-staging-postgres-password-here
POSTGRES_DB=inlearning_staging

# Elasticsearch Configuration
ELASTICSEARCH_ENABLED=true
ELASTICSEARCH_HOST=your-elasticsearch-cloud-url-here
ELASTICSEARCH_INDEX=inlearning-staging
ELASTICSEARCH_API_KEY=your-elasticsearch-api-key-here

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# API Configuration
FLASK_API_URL=http://flask_api:5000
DJANGO_API_URL=http://app:8000
API_TOKEN=your-staging-api-token-here

# Anthropic API (pour learning_platform)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Docker/CI Configuration
GITHUB_REPOSITORY=lordmams/inLearning
IMAGE_TAG=staging-latest

# Email Configuration (optionnel)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@staging.inlearning.com

# Admin User Configuration
ADMIN_USERNAME=admin_staging
ADMIN_EMAIL=admin@staging.inlearning.com
ADMIN_PASSWORD=your-admin-password-here

# Logging
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# Security
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# File Upload Limits
MAX_UPLOAD_SIZE=52428800
ALLOWED_UPLOAD_EXTENSIONS=csv,json,xlsx

# Apache Spark Configuration
SPARK_ENABLED=true
SPARK_MASTER_URL=spark://spark-master:7077
SPARK_UI_URL=http://spark-master:8080
SPARK_EXECUTOR_MEMORY=1g
SPARK_EXECUTOR_CORES=1
SPARK_TOTAL_EXECUTOR_CORES=2 