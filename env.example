# Configuration de base Django
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,app,*

# Base de données PostgreSQL
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=" "
POSTGRES_DB=elearning_db

# Elasticsearch Configuration (API Key uniquement)
ELASTICSEARCH_ENABLED=true
ELASTICSEARCH_HOST=" "
ELASTICSEARCH_INDEX=" "
ELASTICSEARCH_API_KEY= " "

# Redis Configuration (optionnel)
REDIS_URL=redis://redis:6379/0

# API Configuration
FLASK_API_URL=http://flask_api:5000
DJANGO_API_URL=http://app:8000
API_TOKEN=consumer-secret-token-change-in-production

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@elearning.com

# Notifications
EMAIL_NOTIFICATIONS_ENABLED=false
ADMIN_NOTIFICATION_EMAILS=admin@example.com,admin2@example.com

# Webhooks (optionnel)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/TEAMS/WEBHOOK

# Anthropic API (pour learning_platform)
ANTHROPIC_API_KEY=""

# Logging
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# Security (production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# File Upload Limits
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
ALLOWED_UPLOAD_EXTENSIONS=csv,json,xlsx

# Consumer Configuration
CONSUMER_MAX_FILE_SIZE=52428800
CONSUMER_SUPPORTED_FORMATS=json,csv,xlsx
CONSUMER_WATCH_INTERVAL=1 

# Admin User Configuration (créé automatiquement au démarrage)
ADMIN_USERNAME=""
ADMIN_EMAIL=""
ADMIN_PASSWORD=" "
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=System

# Configuration Learning Platform (Consumer)
LEARNING_PLATFORM_URL=http://localhost:8000

# Airflow Configuration
AIRFLOW_UID=50000

# Apache Spark Configuration
SPARK_ENABLED=true
SPARK_MASTER_URL=spark://spark-master:7077
SPARK_UI_URL=http://spark-master:8080
SPARK_EXECUTOR_MEMORY=2g
SPARK_EXECUTOR_CORES=2
SPARK_TOTAL_EXECUTOR_CORES=4 